<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/elektor-logo.png" />
    <title>Vote for Your Candidate</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-slate-50 via-gray-50 to-slate-100 font-sans antialiased">
    
    <!-- Header Section -->
    <div class="w-full bg-gradient-to-r from-slate-700 to-slate-900 shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-white rounded-xl flex items-center justify-center shadow-lg">
              <img src="/elektor-logo.png" alt="Elektor Logo" class="w-10 h-10 sm:w-12 sm:h-12 object-contain">
            </div>
            <div>
              <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-white tracking-tight">Elektor Voting System</h1>
              <p class="text-xs sm:text-sm text-slate-300 mt-0.5">Secure Electronic Voting Platform</p>
            </div>
          </div>
          <form action="/voter/login" method="GET" class="w-full sm:w-auto">
            <button type="submit" class="w-full sm:w-auto bg-red-500 hover:bg-red-600 text-white font-semibold px-6 py-2.5 rounded-lg transition-all duration-200 flex items-center justify-center gap-2 shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Welcome Banner -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6 sm:mt-8">
      <div class="bg-white rounded-2xl shadow-lg p-6 sm:p-8 border border-slate-200">
        <div class="flex flex-col sm:flex-row items-center gap-4">
          <div class="w-16 h-16 bg-gradient-to-br from-slate-700 to-slate-900 rounded-2xl flex items-center justify-center shadow-lg flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="text-center sm:text-left flex-1">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-1">
              Welcome, <span class="text-slate-700"><%= voter.firstname %> <%= voter.lastname %></span>
            </h2>
            <p class="text-sm sm:text-base text-gray-600">Please select your preferred candidate for each position below</p>
          </div>
          <div class="hidden lg:flex items-center gap-2 bg-green-50 text-green-700 px-4 py-2 rounded-full text-sm font-medium border border-green-200">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Verified Voter
          </div>
        </div>
      </div>
    </div>

    <!-- No Candidates Message -->
    <% if (typeof noCandidates !== 'undefined' && noCandidates) { %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-6 rounded-r-2xl shadow-md">
        <div class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500 mt-0.5 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <h3 class="text-lg font-semibold text-yellow-800 mb-1">No Candidates Available</h3>
            <p class="text-yellow-700">There are currently no candidates registered for this election. Please contact the administrator.</p>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Voting Form -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 pb-24">
      <form id="voteForm" action="/votes/votes" method="POST" class="space-y-6 sm:space-y-8">
        
        <% Object.keys(groupedCandidates).forEach(position => { 
          const positionKey = position.replace(/\s+/g, '');
        %>
        
        <!-- Position Section -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
          
          <!-- Position Header -->
          <div class="bg-gradient-to-r from-slate-700 to-slate-900 px-6 sm:px-8 py-4 sm:py-5">
            <h3 class="text-xl sm:text-2xl font-bold text-white flex items-center gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-7 sm:w-7 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <%= position %>
            </h3>
            <p class="text-slate-300 text-sm mt-1">Select one candidate or skip this position</p>
          </div>

          <!-- Candidates Grid -->
          <div class="p-4 sm:p-6 lg:p-8">
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-7 gap-3 sm:gap-4">
              
              <% groupedCandidates[position].forEach(candidate => { %>
              <!-- Candidate Card -->
              <div class="candidate-card group">
                <div class="bg-white rounded-xl border-2 border-gray-200 hover:border-slate-500 transition-all duration-300 overflow-hidden shadow-sm hover:shadow-xl transform hover:-translate-y-1">
                  
                  <!-- Photo -->
                  <div class="relative aspect-[3/4] overflow-hidden bg-gray-100">
                    <img
                      src="<%= candidate.profilephoto || '/images/candidates_profiles/default-photo.jpg' %>"
                      alt="<%= candidate.firstname %> <%= candidate.lastname %>"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  </div>
                  
                  <!-- Info -->
                  <div class="p-3 sm:p-4">
                    <h4 class="text-sm sm:text-base font-semibold text-gray-900 mb-2 sm:mb-3 text-center leading-tight min-h-[2.5rem] sm:min-h-[3rem] flex items-center justify-center">
                      <%= candidate.firstname %> <%= candidate.lastname %>
                    </h4>
                    
                    <button
                      type="button"
                      class="vote-button w-full py-2 sm:py-2.5 px-4 rounded-lg font-semibold text-sm sm:text-base transition-all duration-200 border-2"
                      data-position="<%= position %>"
                      data-candidate-id="<%= candidate.id %>"
                      data-candidate-name="<%= candidate.firstname %> <%= candidate.lastname %>"
                      id="candidate-<%= positionKey %>-<%= candidate.id %>"
                    >
                      <span class="unselected-text flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        Vote
                      </span>
                      <span class="selected-text hidden flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Selected
                      </span>
                    </button>
                  </div>
                </div>
              </div>
              <% }); %>

              <!-- Skip Option -->
              <div class="candidate-card group">
                <div class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-300 hover:border-slate-500 transition-all duration-300 overflow-hidden shadow-sm hover:shadow-xl transform hover:-translate-y-1 h-full flex flex-col">
                  
                  <!-- Icon -->
                  <div class="relative aspect-[3/4] overflow-hidden bg-gray-100 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 sm:h-20 sm:w-20 text-gray-300 group-hover:text-gray-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                  </div>
                  
                  <!-- Info -->
                  <div class="p-3 sm:p-4 flex-1 flex flex-col justify-between">
                    <h4 class="text-sm sm:text-base font-semibold text-gray-600 mb-2 sm:mb-3 text-center leading-tight min-h-[2.5rem] sm:min-h-[3rem] flex items-center justify-center">
                      Skip Position
                    </h4>
                    
                    <button
                      type="button"
                      class="skip-button w-full py-2 sm:py-2.5 px-4 rounded-lg font-semibold text-sm sm:text-base transition-all duration-200 border-2"
                      data-position="<%= position %>"
                      data-candidate-id="skipped"
                      id="skipped-button-<%= positionKey %>"
                    >
                      <span class="unselected-text flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                        Skip
                      </span>
                      <span class="selected-text hidden flex items-center justify-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Skipped
                      </span>
                    </button>
                  </div>
                </div>
              </div>

            </div>

            <!-- Hidden Input -->
            <input
              required
              type="hidden"
              name="<%= positionKey %>CandidateId"
              id="hidden-<%= positionKey %>"
            />
          </div>
        </div>
        <% }); %>

        <!-- Submit Button (Fixed on Mobile) -->
        <div class="fixed bottom-0 left-0 right-0 bg-white border-t-2 border-gray-200 p-4 shadow-2xl lg:relative lg:border-0 lg:shadow-none lg:bg-transparent lg:p-0 z-50">
          <div class="max-w-7xl mx-auto">
            <button 
              type="button" 
              id="submitVoteButton" 
              class="w-full bg-gradient-to-r from-slate-700 to-slate-900 hover:from-slate-800 hover:to-black text-white font-bold py-4 px-8 rounded-xl transition-all duration-200 shadow-lg shadow-slate-900/30 hover:shadow-xl hover:shadow-slate-900/40 flex items-center justify-center gap-3 text-base sm:text-lg"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Submit Your Vote
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmationModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[100] hidden items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto animate-modal">
        <div class="bg-gradient-to-r from-slate-700 to-slate-900 px-6 py-5 rounded-t-2xl">
          <h3 class="text-2xl font-bold text-white flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Confirm Your Vote
          </h3>
          <p class="text-slate-300 text-sm mt-2">Please review your selections before submitting</p>
        </div>
        
        <div class="p-6">
          <ul id="selectedCandidatesList" class="space-y-4 mb-6"></ul>
          
          <div class="flex flex-col sm:flex-row gap-3">
            <button 
              id="confirmVoteButton" 
              class="flex-1 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-semibold py-3.5 px-6 rounded-xl transition-all duration-200 shadow-lg flex items-center justify-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Confirm & Submit
            </button>
            <button 
              id="cancelVoteButton" 
              class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3.5 px-6 rounded-xl transition-all duration-200 flex items-center justify-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Vote Counted Modal -->
    <div id="voteCountedModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[100] hidden items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full animate-modal">
        <div class="p-8 text-center">
          <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3">Vote Successfully Recorded!</h3>
          <p class="text-gray-600 mb-6">Thank you for participating in this election. Your vote has been securely counted.</p>
          <button 
            id="closeVoteCountedModalButton" 
            class="w-full bg-gradient-to-r from-slate-700 to-slate-900 hover:from-slate-800 hover:to-black text-white font-semibold py-3.5 px-6 rounded-xl transition-all duration-200 shadow-lg"
          >
            Close
          </button>
        </div>
      </div>
    </div>

    <!-- Incomplete Selection Modal -->
    <div id="confirmationModalSelect" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[100] hidden items-center justify-center p-4">
      <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full animate-modal">
        <div class="p-8 text-center">
          <div class="w-20 h-20 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3">Incomplete Selection</h3>
          <p class="text-gray-600 mb-2">Please vote for one candidate in all positions</p>
          <p class="text-gray-500 text-sm mb-6">You can also click "Skip" if you don't want to vote for a particular position</p>
          <button 
            id="backToVoteAllButton" 
            class="w-full bg-gradient-to-r from-slate-700 to-slate-900 hover:from-slate-800 hover:to-black text-white font-semibold py-3.5 px-6 rounded-xl transition-all duration-200 shadow-lg"
          >
            Okay, Got It
          </button>
        </div>
      </div>
    </div>

    <style>
      @keyframes modalSlideIn {
        from {
          opacity: 0;
          transform: scale(0.95) translateY(-20px);
        }
        to {
          opacity: 1;
          transform: scale(1) translateY(0);
        }
      }
      
      .animate-modal {
        animation: modalSlideIn 0.3s ease-out;
      }

      .vote-button,
      .skip-button {
        background-color: #f1f5f9;
        color: #475569;
        border-color: #cbd5e1;
      }

      .vote-button:hover,
      .skip-button:hover {
        background-color: #e2e8f0;
        border-color: #94a3b8;
      }

      .vote-button.selected,
      .skip-button.selected {
        background-color: #0f172a;
        color: white;
        border-color: #0f172a;
      }

      .vote-button.selected .unselected-text,
      .skip-button.selected .unselected-text {
        display: none;
      }

      .vote-button.selected .selected-text,
      .skip-button.selected .selected-text {
        display: flex;
      }

      /* Extra small devices */
      @media (min-width: 475px) {
        .xs\:grid-cols-2 {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }
    </style>

    <script type="text/javascript" src="/scripts/votesSripts.js"></script>
  </body>
</html>